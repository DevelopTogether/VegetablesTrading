<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/regdialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/warn_update_bg_shape"
    android:orientation="vertical"
>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:text="检测到软件有新版本，是否更新？"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="新版本特性："
        android:textColor="#000000"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/version_description_lv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/update_rightnow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:padding="12dp"
            android:text="立即更新"
            android:textColor="#0F3A91"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/update_later_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:padding="12dp"
            android:text="稍后提示"
            android:textColor="#0F3A91"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>