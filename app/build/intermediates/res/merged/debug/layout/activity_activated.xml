<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activated_icon"
            />

        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已成功激活"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.vegetablestrading.customViews.CustomView
            android:id="@+id/activated_userName"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:left_button_text="会员名称"
            app:left_button_text_color="#000000"
            app:right_button_text="张三"
            app:right_button_text_color="#000000"></com.vegetablestrading.customViews.CustomView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <com.vegetablestrading.customViews.CustomView
            android:id="@+id/activated_userPhone"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:left_button_text="手机号"
            app:left_button_text_color="#000000"
            app:right_button_text="张三"
            app:right_button_text_color="#000000"></com.vegetablestrading.customViews.CustomView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <com.vegetablestrading.customViews.CustomView
            android:id="@+id/activated_userType"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:left_button_text="会员类型"
            app:left_button_text_color="#000000"
            app:right_button_text="VIP金卡"
            app:right_button_text_color="#000000"></com.vegetablestrading.customViews.CustomView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>


        <com.vegetablestrading.customViews.CustomView
            android:id="@+id/activated_userSum"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="left"
            app:left_button_text="会费"
            app:left_button_text_color="#000000"
            app:right_button_text="8000/年"
            app:right_button_text_color="#000000"></com.vegetablestrading.customViews.CustomView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <com.vegetablestrading.customViews.CustomView
            android:id="@+id/activated_deposit"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:left_button_text="押金"
            app:left_button_text_color="#000000"
            app:right_button_text="100元"
            app:right_button_text_color="#000000"></com.vegetablestrading.customViews.CustomView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>


        <com.vegetablestrading.customViews.CustomView
            android:id="@+id/activated_regist_date"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:left_button_text="注册日期"
            app:left_button_text_color="#000000"
            app:right_button_text="100元"
            app:right_button_text_color="#000000"></com.vegetablestrading.customViews.CustomView>

    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:id="@+id/start_use_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_pressed_selecter"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>
