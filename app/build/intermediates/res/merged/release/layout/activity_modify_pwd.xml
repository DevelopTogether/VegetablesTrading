<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
>
    <include
        layout="@layout/app_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"></include>

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原密码"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColorHint="#8a8a8a"
        android:hint="请输入原密码"
        android:id="@+id/oldPwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg_shape"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15sp" />
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/new_Pwd_et"
        android:textColorHint="#8a8a8a"
        android:hint="请输入6-12位数字加字母组合的密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg_shape"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15sp" />
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重复新密码"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/re_new_Pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg_shape"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:hint="请重复输入密码，两次密码保持一致"
        android:textColorHint="#8a8a8a"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/display_pwd_ll"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/display_pwd_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:buttonTint="@color/app_green"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示密码"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/confirm_modify_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_pressed_selecter"
        android:gravity="center"
       android:padding="10dp"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
