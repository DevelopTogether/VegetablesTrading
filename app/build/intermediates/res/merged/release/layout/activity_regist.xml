<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
        layout="@layout/app_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/regist_mobile" />

            <EditText
                android:id="@+id/user_mobile_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/regist_msg" />

            <EditText
                android:id="@+id/user_test_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/forTestContent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_pressed_selecter"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:text="获取验证码"
                android:textColor="#ffffff" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/regist_pwd" />

            <EditText
                android:id="@+id/user_pwd_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="请输入6-12位数字加字母组合的密码"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/regist_pwd" />

            <EditText
                android:id="@+id/user_re_pwd_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请重复输入密码，两次密码保持一致"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/regist_email" />

            <EditText
                android:id="@+id/user_email_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="请输入邮箱"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/regist_user" />

            <EditText
                android:id="@+id/user_pet_name_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="会员名称，不能使用特殊字符"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <LinearLayout
            android:id="@+id/select_addr_ll"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/regist_addr" />

            <TextView
                android:id="@+id/select_addr_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择地区"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/regist_addr_info" />

            <EditText
                android:id="@+id/detail_addr_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="街道门牌信息"
                android:textColor="#000000"
                android:textColorHint="#8a8a8a"
                android:textSize="16sp" />
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"></View>

        <RadioGroup
            android:id="@+id/vip_rg"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/regist_member" />

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/vip_glod_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@drawable/radio_button_select"
                android:checked="true"
                android:text="  VIP金卡"
                android:textColor="#000000" />

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/vip_silver_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:button="@drawable/radio_button_select"
                android:checked="false"
                android:text="  P银卡"
                android:textColor="#000000" />

            <RadioButton
                android:layout_weight="1"
                android:layout_marginLeft="10dp"

                android:id="@+id/vip_blue_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_select"
                android:checked="false"
                android:text="  N蓝卡"
                android:textColor="#000000" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/regist_bg"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/agree_provision_cb"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:checked="true"
                android:text="同意"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:buttonTint="@color/app_green" />

            <TextView
                android:id="@+id/provision_info_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="《会员服务条款》"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/regist_rightnow_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_pressed_selecter"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即注册"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/cancel_regist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_unpress_selecter"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消注册"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
